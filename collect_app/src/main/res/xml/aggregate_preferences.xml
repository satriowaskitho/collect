<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:dialogTitle="@string/change_server_url"
        android:inputType="textNoSuggestions"
        android:key="server_url"
        android:title="@string/server_url" />
    <EditTextPreference
        android:dialogTitle="@string/change_username"
        android:inputType="textNoSuggestions"
        android:key="username"
        android:title="@string/username" />
    <EditTextPreference
        android:dialogTitle="@string/change_password"
        android:inputType="textPassword"
        android:key="password"
        android:title="@string/password" />

    <Preference
        android:key="custom_server_paths"
        android:persistent="false"
        android:summary="@string/legacy_custom_server_paths_summary"
        android:title="@string/custom_server_paths" />

</PreferenceScreen>